{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/karelmonash2021/HomeWork_WK9/main/data/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "projection": {
        "type": "equirectangular"
      },
      "mark": {
        "type": "geoshape",
        "fill": "gray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/karelmonash2021/HomeWork_WK9/main/data/airport_cleaned.csv"
      },
      "projection": {
        "type": "equirectangular"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Lat",
          "type": "quantitative"
        },
        "size": {"value": 10},
        "color": {"value": "gray"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/karelmonash2021/HomeWork_WK9/main/data/airport_cleaned.csv"
      },
      "transform": [
        {"filter": {"field": "Remarks", "equal": "origin"}},
        {
          "lookup": "origin",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/karelmonash2021/HomeWork_WK9/main/data/airport_cleaned.csv"
            },
            "key": "iata",
            "fields": ["Lat", "Long"]
          },
          "as": ["origin_latitude", "origin_longitude"]
        },
        {
          "lookup": "destination",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/karelmonash2021/HomeWork_WK9/main/data/airport_cleaned.csv"
            },
            "key": "iata",
            "fields": ["Lat", "Long"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }
      ],
      "projection": {
        "type": "equirectangular"
      },
      "mark": "rule",
      "encoding": {
        "longitude": {
          "field": "origin_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "origin_latitude",
          "type": "quantitative"
        },
        "longitude2": {"field": "dest_longitude"},
        "latitude2": {"field": "dest_latitude"}
      }
    }
  ]
}
